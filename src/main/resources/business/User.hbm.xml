<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="business.User" table="users">
        <id type="java.lang.Long" name="userId" column="userid">
            <generator class="increment"/>
        </id>
        <property name="username" type="java.lang.String" column="username" not-null="true"/>
        <property name="password" type="java.lang.String" column="passw" not-null="true"/>
        <property name="email" type="java.lang.String" column="email" not-null="true"/>
    </class>
</hibernate-mapping>